@model Captivate.Models.DriverLinkCourseModel

@using (Html.BeginForm("AssignCourseToDriver", "LinkDriverCourse", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Assign a Course To a Driver</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.DriverList, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.SelectedDriverId, Model.DriverList, "Select a Driver", new { @class = "driverListDropDown" })
            </div>
        </div>
        <br />

        <div class="form-group">
            @Html.LabelFor(model => model.CourseList, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.SelectedCourseId, Model.CourseList, "Select a Course", new { id = "courseListDropdown" })
            </div>
        </div>
        <br/>

        <div class="form-group">
            @Html.LabelFor(model => model.Priority, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.SelectedPriorityId, Model.PriorityList, "Select a Priority", new { id = "priorityListDropdown" })
            </div>
        </div>
        <br/>

        <div class="form-group">
            @Html.LabelFor(model => model.Due_Date, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Due_Date, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Due_Date, "", new { @class = "text-danger" })
            </div>
        </div>
        <br/>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    <button class="waves-effect waves-light btn-small">@Html.ActionLink("Back", "RedirectToAssignTab", null, new { @class = "page-nav" })</button>
</div>



<script>
    $(function () {
        $('.driverListDropDown').chosen({ width: "25%" });
        //$('.driverListDropDown').click(function () {
        //    $('.driverListDropDown').prop('selected', true);
        //    $('.driverListDropDown').trigger('liszt:updated');
        //})
        $('.driverListDropDown').prop("selected", true);
    })

    $(function () {
        $('#priorityListDropdown').chosen({width: "25%"});
    })


    $(function () {
        $('#courseListDropdown').chosen({width: "25%"});
    })

</script>


